PROGRAM ASSINGMENT_5_25
    IMPLICIT NONE
    REAL:: AM,RT,N,I
    READ*,AM,RT,N
    DO I=1,N
        AM=AM+(AM*RT)
        PRINT*,"AMOUNT IS ",AM
    END DO
END PROGRAM

/// IT CAN BE DONE WITHOUT USING 'IMPLICIT NONE' AS THERE IS NO JUNK IN VARIABLE ,LIKE AS


PROGRAM ASSINGMENT_5_25
    REAL:: AM,RT,N,I
    READ*,AM,RT,N
    DO I=1,N
        AM=AM+(AM*RT)
        PRINT*,"AMOUNT IS ",AM
    END DO
END PROGRAM
